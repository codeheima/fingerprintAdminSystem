<?xml version="1.0" encoding="UTF-8"?>
<web-app id="xxn-framework" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">



	<!-- 框架默认过滤器，用于提供编码处理、连接关闭等基础功能 -->
	<filter>
		<filter-name>Snappy Web Core Filter</filter-name>
		<filter-class>org.ma.filter.WebCoreFilter</filter-class>
		<init-param>
			<param-name>encode</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>Snappy Web Core Filter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>


	
	<filter>
		<filter-name>common filter</filter-name>
		<filter-class>org.ma.filter.CommonFilter</filter-class>
	</filter>
	
	
	<filter-mapping>
		<filter-name>common filter</filter-name>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>
	
	
	<listener>	
		<listener-class>org.ma.listener.AppListener</listener-class>
	</listener> 


	<!-- session超时时间设置为xx分钟 -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>


	<jsp-config>
		<taglib>
			<taglib-uri>/ma-tag-web</taglib-uri>
			<taglib-location>/WEB-INF/tlds/ma-web-tag.tld</taglib-location>
		</taglib>
	</jsp-config>
</web-app>
